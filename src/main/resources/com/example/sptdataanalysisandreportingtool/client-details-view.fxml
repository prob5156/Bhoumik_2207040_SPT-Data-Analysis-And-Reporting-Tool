<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.ClientDetailsController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="15" fillWidth="true"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label fx:id="lblHeader" text="" style="-fx-font-size:14; -fx-font-weight:bold;"/>

        <Label text="Enter Client Details"
               style="-fx-font-size:20; -fx-font-weight:bold;"/>

        <Label text="Client Name"/>
        <TextField fx:id="tfClientName" promptText="Client Name"/>
        
        <Label text="Phone Number"/>
        <TextField fx:id="tfPhoneNumber" promptText="Phone Number"/>

        <Label text="Password"/>
        <PasswordField fx:id="tfPassword" promptText="Password"/>

        <Button text="Submit" onAction="#submit"/>
        <Button text="Back" onAction="#back"/>

    </VBox>
</AnchorPane>

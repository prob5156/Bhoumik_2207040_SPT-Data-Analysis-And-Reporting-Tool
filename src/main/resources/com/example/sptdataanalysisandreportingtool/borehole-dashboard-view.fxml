<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.BoreholeDashboardController"
            prefWidth="600" prefHeight="700">

    <VBox spacing="15" fillWidth="true"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20">

        <Label fx:id="lblHeader" text="" style="-fx-font-size:14; -fx-font-weight:bold;"/>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox spacing="8">
                <HBox spacing="15">
                    <Label text="Location:" style="-fx-font-weight:bold;"/>
                    <Label fx:id="lblLocationName" text=""/>
                </HBox>
                <HBox spacing="15">
                    <Label text="Bore Holes:" style="-fx-font-weight:bold;"/>
                    <Label fx:id="lblBoreHoles" text=""/>
                </HBox>
            </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            <VBox alignment="TOP_RIGHT" spacing="10">
                <Button fx:id="btnEditLocation" text="Edit" onAction="#editLocation"/>
                <Button text="Back" onAction="#back"/>
            </VBox>
        </HBox>

        <Separator/>

        <Label text="Boreholes" style="-fx-font-size:16; -fx-font-weight:bold;"/>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Search:" />
            <TextField fx:id="tfSearchBoreholes" promptText="Search boreholes by name" />
        </HBox>

        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <VBox fx:id="vboxBoreholes" spacing="12" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>

    </VBox>
</AnchorPane>

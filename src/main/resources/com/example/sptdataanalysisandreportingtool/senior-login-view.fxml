<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.SeniorLoginController"
            prefWidth="400" prefHeight="300">

    <VBox alignment="CENTER" spacing="15" fillWidth="true"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label text="Senior Executive Engineer Login"
               style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <TextField fx:id="tfUser" promptText="Username"/>
        <PasswordField fx:id="tfPass" promptText="Password"/>

        <Button text="Login" onAction="#login"/>
        <Button text="Back" onAction="#back"/>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.ModifiersDashboardController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="12"
        AnchorPane.topAnchor="20"
        AnchorPane.leftAnchor="20"
        AnchorPane.rightAnchor="20"
        AnchorPane.bottomAnchor="20">

      <Label fx:id="lblHeader" text="" style="-fx-font-size:14; -fx-font-weight:bold;"/>

      <HBox alignment="CENTER_LEFT">
        <Label text="Clients" style="-fx-font-size:22; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS" />
        <Button text="Enter New Client" onAction="#enterNewClients"/>
      </HBox>

      <Separator/>

      <ScrollPane fitToWidth="true" fitToHeight="true">
        <content>
          <FlowPane fx:id="flowPaneClients" hgap="12" vgap="12" style="-fx-padding: 10;" />
        </content>
      </ScrollPane>

    </VBox>
</AnchorPane>

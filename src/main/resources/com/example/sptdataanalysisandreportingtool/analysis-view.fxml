<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="628.0" prefWidth="762.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sptdataanalysisandreportingtool.AnalysisController">

        <children>
                <VBox spacing="16" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

                         <Label fx:id="lblHeader" styleClass="header-large" text="" />

                         <Label style="-fx-font-size:18; -fx-font-weight:bold;" text="SPT Analysis" />

                        <HBox spacing="12">
                                <children>
                                        <VBox spacing="8" styleClass="pane">
                                                <Label text="Percentage Terms" />
                                                <TableView fx:id="tblPercentTerms" prefHeight="200" prefWidth="220">
                                                        <columns>
                                                                <TableColumn fx:id="colPercRange" prefWidth="140" text="Percentage Range" />
                                                                <TableColumn fx:id="colTerm" prefWidth="80" text="Term" />
                                                        </columns>
                                                </TableView>
                                        </VBox>

                                        <VBox spacing="8" styleClass="pane">
                                                <Label text="Total SPT (Sand&gt;Clay)" />
                                                <TableView fx:id="tblTable2" prefHeight="200" prefWidth="240">
                                                        <columns>
                                                                <TableColumn fx:id="colTotalRange2" prefWidth="140" text="Total SPT" />
                                                                <TableColumn fx:id="colCondition2" prefWidth="100" text="Condition" />
                                                        </columns>
                                                </TableView>
                                        </VBox>

                                        <VBox spacing="8" styleClass="pane">
                                                <Label text="Total SPT (Sand&lt;Clay)" />
                                                <TableView fx:id="tblTable3" prefHeight="200" prefWidth="240">
                                                        <columns>
                                                                <TableColumn fx:id="colTotalRange3" prefWidth="140" text="Total SPT" />
                                                                <TableColumn fx:id="colCondition3" prefWidth="100" text="Condition" />
                                                        </columns>
                                                </TableView>
                                        </VBox>
                                </children>
                        </HBox>

                        <Label fx:id="lblStatus" text="Status: Idle" />

                        <TextArea fx:id="txtResult" prefHeight="222.0" prefWidth="772.0" promptText="Analysis output will appear here" />

                        <HBox alignment="CENTER_RIGHT">
                                <children>
                                        <Button onAction="#back" text="Back" />
                                </children>
                        </HBox>

                </VBox>
        </children>

</AnchorPane>

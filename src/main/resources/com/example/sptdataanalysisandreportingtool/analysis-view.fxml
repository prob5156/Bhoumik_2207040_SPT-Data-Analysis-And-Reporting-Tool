<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.AnalysisController"
            prefWidth="700" prefHeight="500">

    <VBox spacing="15"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

         <Label fx:id="lblHeader" text="" style="-fx-font-size:14; -fx-font-weight:bold;"/>

         <Label text="SPT Analysis"
                 style="-fx-font-size:20; -fx-font-weight:bold;"/>

                <HBox spacing="12">
                        <VBox>
                                <Label text="Percentage Terms" style="-fx-font-weight:bold;" />
                                <TableView fx:id="tblPercentTerms" prefHeight="200" prefWidth="200">
                                        <columns>
                                                <TableColumn fx:id="colPercRange" text="Percentage Range" prefWidth="120" />
                                                <TableColumn fx:id="colTerm" text="Term" prefWidth="80" />
                                        </columns>
                                </TableView>
                        </VBox>
                        <VBox>
                                <Label text="Total SPT (Sand&gt;Clay)" style="-fx-font-weight:bold;" />
                                <TableView fx:id="tblTable2" prefHeight="200" prefWidth="220">
                                        <columns>
                                                <TableColumn fx:id="colTotalRange2" text="Total SPT" prefWidth="120" />
                                                <TableColumn fx:id="colCondition2" text="Condition" prefWidth="100" />
                                        </columns>
                                </TableView>
                        </VBox>
                        <VBox>
                                <Label text="Total SPT (Sand&lt;Clay)" style="-fx-font-weight:bold;" />
                                <TableView fx:id="tblTable3" prefHeight="200" prefWidth="220">
                                        <columns>
                                                <TableColumn fx:id="colTotalRange3" text="Total SPT" prefWidth="120" />
                                                <TableColumn fx:id="colCondition3" text="Condition" prefWidth="100" />
                                        </columns>
                                </TableView>
                        </VBox>
                </HBox>

                <Label fx:id="lblStatus" text="Status: Idle"/>

                <TextArea fx:id="txtResult"
                                  prefHeight="200"
                                  promptText="Analysis output will appear here"/>

        <Button text="Back" onAction="#back"/>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.ClientLocationsPanelController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="15" fillWidth="true"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.bottomAnchor="20">

        <Label fx:id="lblHeader" text="" style="-fx-font-size:14; -fx-font-weight:bold;"/>

        <HBox spacing="20" alignment="CENTER_LEFT">
            <VBox>
                <HBox spacing="20">
                    <Label text="Client:" />
                    <Label fx:id="lblClientName" text="" style="-fx-font-weight:bold;"/>
                </HBox>
                <HBox spacing="20">
                    <Label text="Phone:" />
                    <Label fx:id="lblPhoneNumber" text=""/>
                </HBox>
            </VBox>
            <Pane HBox.hgrow="ALWAYS" />
            <VBox fx:id="actionsBox" alignment="TOP_RIGHT">
                <Button text="Enter new location" onAction="#enterNewLocation"/>
                <Button text="Back" onAction="#back"/>
            </VBox>
        </HBox>

        <Separator/>

        <Label text="Locations" style="-fx-font-size:16; -fx-font-weight:bold;"/>

        <ScrollPane fitToWidth="true" fitToHeight="true">
            <content>
                <FlowPane fx:id="flowPaneLocations" hgap="12" vgap="12" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>

    </VBox>
</AnchorPane>

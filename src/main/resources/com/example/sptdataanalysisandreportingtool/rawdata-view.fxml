<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.RawDataController"
            prefWidth="900" prefHeight="600">

    <VBox spacing="12"
          AnchorPane.topAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <Label text="Raw SPT Data Entry"
               style="-fx-font-size:20; -fx-font-weight:bold;"/>

        <HBox spacing="10">
            <TextField fx:id="tfDepth" promptText="Depth"/>
            <TextField fx:id="tfN1" promptText="N1"/>
            <TextField fx:id="tfN2" promptText="N2"/>
            <TextField fx:id="tfN3" promptText="N3"/>
        </HBox>

        <TextArea fx:id="taComment"
                  promptText="Field Comment"
                  prefHeight="60"/>

        <HBox spacing="10">
            <Button text="Add" onAction="#add"/>
            <Button text="Update" onAction="#update"/>
            <Button text="Delete" onAction="#delete"/>
        </HBox>

        <TableView fx:id="table" prefHeight="300">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="40"/>
                <TableColumn fx:id="colDepth" text="Depth"/>
                <TableColumn fx:id="colN1" text="N1"/>
                <TableColumn fx:id="colN2" text="N2"/>
                <TableColumn fx:id="colN3" text="N3"/>
                <TableColumn fx:id="colComment" text="Comment" prefWidth="250"/>
            </columns>
        </TableView>

        <Button text="Back to Dashboard" onAction="#back"/>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox spacing="15"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="50"
          AnchorPane.rightAnchor="50">

        <Label text="SPT Data Analysis Tool"
               style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <TextField fx:id="tfUser" promptText="Username (sub / senior)"/>
        <PasswordField fx:id="tfPass" promptText="Password"/>

        <Button text="Login" onAction="#login"/>

    </VBox>
</AnchorPane>

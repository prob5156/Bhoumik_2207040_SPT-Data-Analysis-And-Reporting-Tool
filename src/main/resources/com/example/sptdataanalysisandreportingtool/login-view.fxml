<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="370.0" prefWidth="400" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sptdataanalysisandreportingtool.LoginController">

    <VBox alignment="CENTER" fillWidth="true" spacing="15" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50">

      <Label style="-fx-font-size:18; -fx-font-weight:bold;" text="SPT Data Analysis Tool" />
        
        <!-- CLIENT SECTION -->
        <Label style="-fx-font-size:14; -fx-font-weight:bold;" text="For Clients" />
        
        <TextField fx:id="tfUser" promptText="Phone Number" />
        <PasswordField fx:id="tfPass" promptText="Password" />
        
        <Button onAction="#login" text="Login" />
        
        <Separator />
        
        <!-- MODIFIERS SECTION -->
        <Label style="-fx-font-size:14; -fx-font-weight:bold;" text="For the Modifiers" />
        
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#loginAsSenior" prefWidth="80" text="SENIOR" />
            <Button onAction="#loginAsSub" prefWidth="80" text="SUB" />
        </HBox>

    </VBox>
</AnchorPane>

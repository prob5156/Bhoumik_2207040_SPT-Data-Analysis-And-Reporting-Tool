<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.4"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.LoginController">

    <center>
        <VBox spacing="15"
              alignment="CENTER"
              maxWidth="350"
              BorderPane.alignment="CENTER"
              style="-fx-padding: 40;">

            <Label text="SPT System Login"
                   style="-fx-font-size:24;"/>

            <TextField fx:id="tfUser"
                       promptText="Username"/>

            <PasswordField fx:id="pfPass"
                           promptText="Password"/>

            <Button text="Login"
                    prefWidth="120"
                    onAction="#login"/>

            <Label fx:id="lblError"
                   textFill="red"/>

        </VBox>
    </center>

</BorderPane>

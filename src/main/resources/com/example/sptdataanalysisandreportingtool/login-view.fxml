<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="420.0" prefWidth="520" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sptdataanalysisandreportingtool.LoginController">

    <children>
        <VBox alignment="CENTER" spacing="12.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="40.0">
            <children>
                <Region prefHeight="20" />

                <VBox fx:id="card" alignment="CENTER" spacing="14.0" styleClass="pane" prefWidth="420">
                    <children>
                        <Label fx:id="lblHeader" text="SPT Data Analysis" styleClass="header-large" />
                        <Label text="Secure login to manage and view SPT data" />

                        <VBox spacing="8" prefWidth="320">
                            <children>
                                <Label text="Phone" />
                                <TextField fx:id="tfUser" promptText="Phone number" />

                                <Label text="Password" />
                                <PasswordField fx:id="tfPass" promptText="Password" />
                            </children>
                        </VBox>

                        <Button fx:id="btnLogin" onAction="#login" text="Sign In" prefWidth="200" />

                        <!-- Removed registration prompt and button -->
                    </children>
                </VBox>

                <Separator prefWidth="420" />

                <VBox alignment="CENTER" spacing="8">
                    <children>
                        <Label text="Quick login (modifiers)" />
                        <HBox alignment="CENTER" spacing="12">
                            <children>
                                <Button onAction="#loginAsSenior" prefWidth="110" text="SENIOR" />
                                <Button onAction="#loginAsSub" prefWidth="110" text="SUB" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <Region prefHeight="10" />
            </children>
        </VBox>
    </children>

</AnchorPane>

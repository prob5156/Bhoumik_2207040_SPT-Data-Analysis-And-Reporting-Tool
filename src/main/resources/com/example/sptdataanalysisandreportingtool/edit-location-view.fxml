<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.EditLocationController"
            prefWidth="500" prefHeight="350">

    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.bottomAnchor="40">

        <Label text="Edit Location" style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <VBox spacing="8">
            <Label text="Location Name:" style="-fx-font-weight:bold;"/>
            <TextField fx:id="txfLocationName" />
        </VBox>

        <VBox spacing="8">
            <Label text="Number of Bore Holes:" style="-fx-font-weight:bold;"/>
            <TextField fx:id="txfBoreHoles" />
        </VBox>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Save" onAction="#save" prefWidth="100"/>
            <Button text="Cancel" onAction="#cancel" prefWidth="100"/>
        </HBox>

    </VBox>
</AnchorPane>

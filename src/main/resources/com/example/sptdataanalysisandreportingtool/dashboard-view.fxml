<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sptdataanalysisandreportingtool.DashboardController"
      prefWidth="800" prefHeight="520">

  <children>
    <VBox alignment="CENTER" spacing="16" AnchorPane.leftAnchor="24" AnchorPane.rightAnchor="24" AnchorPane.topAnchor="24" AnchorPane.bottomAnchor="24">
      <children>
        <VBox fx:id="card" alignment="CENTER" spacing="12" styleClass="pane" prefWidth="680">
          <children>
            <Label fx:id="lblHeader" text="Welcome" styleClass="header-large" />
            <Label text="Project Dashboard" />

            <HBox spacing="12" alignment="CENTER">
              <children>
                <Button text="Enter Raw SPT Data" onAction="#openRaw" prefWidth="180" />
                <Button text="Run Analysis" onAction="#openAnalysis" prefWidth="180" />
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
    </VBox>
  </children>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.DashboardController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="20"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="40">

        <Label text="Dashboard"
               style="-fx-font-size:22; -fx-font-weight:bold;"/>

        <Button text="Enter Raw SPT Data" onAction="#openRaw"/>
        <Button text="Run Analysis" onAction="#openAnalysis"/>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sptdataanalysisandreportingtool.EnterNewClientController"
            prefWidth="600" prefHeight="400">

    <VBox alignment="CENTER" spacing="12.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <children>
        <Region prefHeight="20" />
        <VBox fx:id="card" alignment="CENTER" spacing="14.0" styleClass="pane" prefWidth="520">
          <children>
            <Label fx:id="lblHeader" text="" styleClass="header-large" />
            <Label fx:id="lblClientName" text="" />

            <VBox spacing="8" prefWidth="360">
              <children>
                <Label text="Enter Location" />
                <TextField fx:id="tfLocationName" promptText="Location Name" />

                <Label text="Enter number of Bore holes" />
                <TextField fx:id="tfBoreHoles" promptText="Number of Bore Holes" />
              </children>
            </VBox>

            <HBox alignment="CENTER" spacing="12">
              <children>
                <Button text="Submit" onAction="#submit" />
                <Button text="Back" onAction="#back" />
              </children>
            </HBox>
          </children>
        </VBox>
        <Region prefHeight="10" />
      </children>
    </VBox>
</AnchorPane>
